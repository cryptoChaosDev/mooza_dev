FROM node:20-alpine

WORKDIR /app

# Copy package.json only (not package-lock.json)
COPY package.json ./

# Fix for rollup optional dependencies issue in Alpine
# Clear cache and do clean install
RUN npm cache clean --force && \
    rm -rf package-lock.json node_modules && \
    npm install --force

# Copy source code
COPY . .

# Clear vite cache
RUN rm -rf node_modules/.vite

EXPOSE 3000

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
