FROM node:20-alpine

WORKDIR /app

# Copy package.json only (not package-lock.json)
COPY package.json ./

# Fresh install to generate Linux-compatible lock file
RUN npm install

# Copy source code
COPY . .

# Clear vite cache
RUN rm -rf node_modules/.vite

EXPOSE 3000

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
