FROM node:20-alpine

# Install OpenSSL for Prisma
RUN apk add --no-cache openssl

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy prisma schema for generation
COPY prisma ./prisma/

# Generate Prisma Client
RUN npx prisma generate

EXPOSE 4000

# Dev mode uses tsx watch via command in docker-compose
CMD ["npm", "run", "dev"]
