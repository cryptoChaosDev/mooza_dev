generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ REFERENCE TABLES ============

model FieldOfActivity {
  id   String @id @default(uuid())
  name String @unique

  professions Profession[]
  users       User[]

  createdAt DateTime @default(now())
}

model Profession {
  id                String          @id @default(uuid())
  name              String
  fieldOfActivityId String
  fieldOfActivity   FieldOfActivity @relation(fields: [fieldOfActivityId], references: [id])

  userProfessions UserProfession[]
  services        Service[]

  createdAt DateTime @default(now())

  @@unique([name, fieldOfActivityId])
  @@index([fieldOfActivityId])
}

// ============ NEW MULTI-LEVEL SEARCH MODELS ============

model Service {
  id           String       @id @default(uuid())
  name         String       @unique
  nameEn       String?
  sortOrder    Int          @default(0)
  professionId String
  profession   Profession   @relation(fields: [professionId], references: [id])
  genres       Genre[]
  users        UserSearchProfile[]
  createdAt    DateTime     @default(now())
}

model Genre {
  id        String            @id @default(uuid())
  name      String            @unique
  nameEn    String?
  serviceId String
  service   Service           @relation(fields: [serviceId], references: [id])
  users     UserSearchProfile[]
  createdAt DateTime          @default(now())
}

model WorkFormat {
  id        String            @id @default(uuid())
  name      String            @unique
  nameEn    String?
  sortOrder Int               @default(0)
  users     UserSearchProfile[]
  createdAt DateTime          @default(now())
}

model EmploymentType {
  id        String            @id @default(uuid())
  name      String            @unique
  nameEn    String?
  sortOrder Int               @default(0)
  users     UserSearchProfile[]
  createdAt DateTime          @default(now())
}

model SkillLevel {
  id        String            @id @default(uuid())
  name      String            @unique
  nameEn    String?
  sortOrder Int               @default(0)
  users     UserSearchProfile[]
  createdAt DateTime          @default(now())
}

model Availability {
  id        String            @id @default(uuid())
  name      String            @unique
  nameEn    String?
  sortOrder Int               @default(0)
  users     UserSearchProfile[]
  createdAt DateTime          @default(now())
}

model UserSearchProfile {
  id               String         @id @default(uuid())
  userId           String
  user             User           @relation(fields: [userId], references: [id])
  serviceId        String?
  service          Service?       @relation(fields: [serviceId], references: [id])
  genreId          String?
  genre            Genre?         @relation(fields: [genreId], references: [id])
  workFormatId     String?
  workFormat       WorkFormat?    @relation(fields: [workFormatId], references: [id])
  employmentTypeId String?
  employmentType   EmploymentType? @relation(fields: [employmentTypeId], references: [id])
  skillLevelId     String?
  skillLevel       SkillLevel?    @relation(fields: [skillLevelId], references: [id])
  availabilityId   String?
  availability     Availability?  @relation(fields: [availabilityId], references: [id])
  pricePerHour     Float?
  pricePerEvent    Float?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@unique([userId, serviceId, genreId])
  @@index([userId])
  @@index([serviceId])
  @@index([genreId])
  @@index([workFormatId])
  @@index([employmentTypeId])
  @@index([skillLevelId])
  @@index([availabilityId])
}

// ============ OTHER REFERENCE TABLES ============

model ProfessionFeature {
  id   String @id @default(uuid())
  name String @unique

  createdAt DateTime @default(now())
}

model Artist {
  id   String @id @default(uuid())
  name String @unique

  userArtists UserArtist[]

  createdAt DateTime @default(now())
}

model Employer {
  id   String  @id @default(uuid())
  name String
  inn  String? @unique
  ogrn String? @unique

  users User[]

  createdAt DateTime @default(now())
}

// ============ USER MODEL ============

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  phone     String?  @unique
  password  String
  firstName String
  lastName  String
  nickname  String?
  avatar    String?
  bio       String?
  country   String?
  city      String?
  role      String?
  genres    String[]
  professions String[] // legacy flat list, kept for backward compat

  // Field of Activity (reference)
  fieldOfActivityId String?
  fieldOfActivity   FieldOfActivity? @relation(fields: [fieldOfActivityId], references: [id])

  // Multi-level professions (relational)
  userProfessions UserProfession[]

  // Multi-level search profiles
  userSearchProfiles UserSearchProfile[]

  // Artist / Group (many-to-many)
  userArtists UserArtist[]

  // Employer (many-to-one)
  employerId String?
  employer   Employer? @relation(fields: [employerId], references: [id])

  // Social links
  vkLink       String?
  youtubeLink  String?
  telegramLink String?

  // Relationships
  posts        Post[]
  likes        Like[]
  comments     Comment[]
  sentRequests Friendship[] @relation("SentRequests")
  receivedRequests Friendship[] @relation("ReceivedRequests")
  sentMessages Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([city])
  @@index([role])
  @@index([fieldOfActivityId])
  @@index([employerId])
}

// ============ JOIN TABLES ============

model UserProfession {
  id           String     @id @default(uuid())
  userId       String
  professionId String
  features     String[]   // selected feature names (e.g. "Начинающий", "Платно")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  profession Profession @relation(fields: [professionId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, professionId])
  @@index([userId])
  @@index([professionId])
}

model UserArtist {
  id       String @id @default(uuid())
  userId   String
  artistId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  artist Artist @relation(fields: [artistId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, artistId])
  @@index([userId])
  @@index([artistId])
}

// ============ EXISTING MODELS ============

model Post {
  id       String @id @default(uuid())
  content  String
  imageUrl String?

  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  likes    Like[]
  comments Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([createdAt])
  @@index([authorId, createdAt])
}

model Like {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String

  createdAt DateTime @default(now())

  @@unique([userId, postId])
  @@index([postId])
}

model Comment {
  id      String @id @default(uuid())
  content String

  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId])
  @@index([authorId])
}

model Message {
  id String @id @default(uuid())

  sender   User   @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  senderId String

  receiver   User   @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId String

  content String
  readAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
  @@index([receiverId, readAt])
  @@index([senderId, receiverId, createdAt])
}

model Friendship {
  id String @id @default(uuid())

  requester   User   @relation("SentRequests", fields: [requesterId], references: [id], onDelete: Cascade)
  requesterId String

  receiver   User   @relation("ReceivedRequests", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId String

  status String // pending, accepted, rejected

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([requesterId, receiverId])
  @@index([requesterId])
  @@index([receiverId])
  @@index([status])
  @@index([receiverId, status])
  @@index([requesterId, status])
}
